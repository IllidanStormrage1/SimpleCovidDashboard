<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/layout_space"
    android:layout_marginEnd="@dimen/layout_space"
    app:cardBackgroundColor="@color/colorLightGray"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/card_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100">

            <TextView
                android:id="@+id/textViewCountryNameMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorSecondaryText"
                tools:text="Russia" />

            <TextView
                android:id="@+id/textViewConfirmedMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorSecondaryText"
                tools:text="25000" />

            <TextView
                android:id="@+id/textViewRecoveredMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorSecondaryText"
                tools:text="45754" />

            <TextView
                android:id="@+id/textViewDeathMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorSecondaryText"
                tools:text="788" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/imageViewCountry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:contentDescription="@string/image_country"
                android:minHeight="@dimen/min_height_flag_image" />

            <TextView
                android:id="@+id/textViewNewConfirmedMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorBlue"
                tools:text="+100" />

            <TextView
                android:id="@+id/textViewNewRecoveredMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorLightGreen"
                tools:text="+5667" />

            <TextView
                android:id="@+id/textViewNewDeathMain"
                style="@style/SecondaryText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:textColor="@color/colorRed"
                tools:text="+67" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
